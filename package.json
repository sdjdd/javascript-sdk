{
  "name": "leancloud-storage",
  "version": "5.0.0",
  "main": "./dist/storage.js",
  "description": "LeanCloud JavaScript SDK.",
  "repository": {
    "type": "git",
    "url": "https://github.com/leancloud/javascript-sdk"
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "npm run clean && npm run compile",
    "compile": "npm run compile:storage && npm run compile:browser",
    "compile:storage": "rollup -c rollup/storage.config.js",
    "compile:browser": "rollup -c rollup/browser.config.js",
    "compile:live-query": "rollup -c rollup/live-query.config.js",
    "doc": "typedoc --out docs src",
    "test": "mocha",
    "coverage": "nyc npm run test",
    "repl": "ts-node ./tools/repl",
    "lint": "eslint --ext=ts,js --max-warnings=0 .",
    "fmt": "prettier --write ."
  },
  "dependencies": {
    "@leancloud/adapter-types": "file:../adapters/packages/adapter-types",
    "base64-arraybuffer": "^0.2.0",
    "debug": "^4.1.1",
    "eventemitter3": "^4.0.4",
    "leancloud-realtime": "^5.0.0-rc.3",
    "leancloud-realtime-plugin-live-query": "^1.2.0",
    "uuid": "^8.1.0"
  },
  "devDependencies": {
    "@leancloud/platform-adapters-browser": "file:../adapters/packages/platform-adapters-browser",
    "@leancloud/platform-adapters-node": "file:../adapters/packages/platform-adapters-node",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@rollup/plugin-typescript": "^5.0.2",
    "@types/mocha": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "eslint": "^6.8.0",
    "mocha": "^7.2.0",
    "nyc": "^15.1.0",
    "prettier": "2.0.5",
    "rollup": "^2.23.0",
    "rollup-plugin-terser": "^6.1.0",
    "should": "^13.2.3",
    "ts-node": "^8.10.2",
    "tslib": "^2.0.0",
    "typedoc": "^0.17.8",
    "typescript": "^3.9.7",
    "websocket": "^1.0.31"
  },
  "license": "MIT",
  "author": {
    "name": "LeanCloud",
    "email": "support@leancloud.rocks"
  }
}
